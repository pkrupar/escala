{
  "name": "uol-frontend-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run watch:sass\"",
    "server": "live-server --open=docs --host=0.0.0.0",
    "watch:sass": "nodemon -e scss -x \"npm run build:sass:web\"",
    "build:sass": "concurrently \"npm run build:sass:app\" \"npm run build:sass:web\" \"npm run build:sass:docs\"",
    "build:sass:app": "node-sass src/styles/app.scss dist/styles/app.css",
    "build:sass:web": "node-sass src/styles/web.scss dist/styles/web.css",
    "build:sass:docs": "node-sass src/styles/docs.scss dist/styles/docs.css",
    "build:docs": "copyfiles dist/**/* docs/",
    "test": "stylelint \"src/styles/**/*.scss\" --syntax scss"
  },
  "devDependencies": {
    "concurrently": "^3.3.0",
    "copyfiles": "^1.2.0",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "shx": "^0.2.2",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ucetnictvi-on-line/uol-frontend-framework.git"
  },
  "author": "Patrik Krupar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ucetnictvi-on-line/uol-frontend-framework/issues"
  },
  "homepage": "https://github.com/ucetnictvi-on-line/uol-frontend-framework#readme"
}
